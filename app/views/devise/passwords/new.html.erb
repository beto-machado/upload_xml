<div class="password-reset-container">
  <h2>Recuperar senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'password-reset-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="form-actions">
      <%= f.submit "Recuperar senha", class: 'form-submit' %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: 'auth-links' %>
</div>
